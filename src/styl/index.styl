pitchBlack = rgb(6, 9, 12)
ltBlack = lighten(black, 3%)
dkGrey = lighten(black, 15%)
ltGrey = #dedede
red = rgb(209, 74, 66)
green = rgb(128, 152, 72)
magenta = #ff209e
orange = #e87828
yellow = #e8c547
paleViolet = rgb(132, 121, 150)
paleBlue = rgb(136, 183, 181)
fjs = #61b76e

// Setting aliases
bgColor = pitchBlack
blocks = ltBlack
borders = dkGray = dkGrey
textColor = ltGrey
pixels = red
canvas = green
channel = magenta
color = paleViolet
number = paleBlue
bool = yellow
warning = orange

br = 0.5rem
ff = 'Lato', sans-serif

.hide
    position absolute
    overflow hidden
    left 0
    top 0
    width 0
    height 0

body, html
    font-family ff
    background bgColor
    padding 0
    margin 0
    color textColor
    line-height 1.5
    position relative
    height 100%
    user-select none
    cursor default

@require './Lato.styl'
@require './buildingBlocks.styl'
@require './typography.styl'
@require './inputs.styl'

@require './tags/**/*.styl'